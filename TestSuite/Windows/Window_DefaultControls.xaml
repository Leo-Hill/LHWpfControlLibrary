<Window x:Class="TestSuite.Windows.Window_DefaultControls" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:TestSuite.Windows" xmlns:usercontrols="clr-namespace:LHWpfControlLibrary.Source.UserControls;assembly=LHWpfControlLibrary" Style="{DynamicResource {x:Type Window}}" mc:Ignorable="d" Title="Controls and Styles" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <usercontrols:UC_TitleBar Title="{Binding Path=Title, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
            <Menu Margin="{DynamicResource Dim_ThStandardMarginLeftRight}">
                <MenuItem Header="TopLevelHeader">
                    <MenuItem Header="SubmenuHeader">
                        <MenuItem Header="SubmenuItem" />
                    </MenuItem>
                    <MenuItem Header="SubmenuItem" />
                </MenuItem>
            </Menu>
        </StackPanel>
        <ScrollViewer x:Name="SV">
        </ScrollViewer>
    </DockPanel>
</Window>

